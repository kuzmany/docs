{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "MTC Extendee Documentation",
  "icons": {
    "library": "fontawesome"
  },
  "colors": {
    "primary": "#2563EB",
    "light": "#60A5FA",
    "dark": "#1D4ED8"
  },
  "typography": {
    "font": "Inter",
    "headings": "Montserrat"
  },
  "modeToggle": {
    "default": "dark"
  },
  "favicon": "/favicon.svg",
  "styling": {
    "eyebrows": "breadcrumbs",
    "headings": {
      "fontSize": {
        "h1": "2.5rem",
        "h2": "2rem",
        "h3": "1.5rem"
      },
      "fontWeight": {
        "h1": "800",
        "h2": "700",
        "h3": "600"
      },
      "letterSpacing": {
        "h1": "-0.02em"
      }
    },
    "tabs": {
      "fontSize": "1.25rem"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": [
          "homepage",
          "changelog"
        ]
      },
      {
        "tab": "Twig Templates Plugin",
        "pages": [
          "twig-templates/introduction",
          "twig-templates/how-to-install",
          "twig-templates/how-to-use",
          "twig-templates/available-tokens",
          "twig-templates/snippets",
          "twig-templates/custom-objects-support",
          "twig-templates/forms-support",
          "twig-templates/embedding-externally",
          "twig-templates/api"
        ]
      },
      {
        "tab": "Customizer Plugin",
        "pages": [
          "plugins/mautic-customizer/introduction",
          "plugins/mautic-customizer/buy"
        ]
      },
      {
        "tab": "Upgrades Policy",
        "pages": [
          "upgrades-policy"
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/logo.png",
    "dark": "/logo/logo.webp"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "mtcextendee.com",
      "href": "https://mtcextendee.com/"
    },
    "links": [
      {
        "type": "link",
        "label": "Support",
        "href": "mailto:support@mtcextendee.com"
      },
      {
        "type": "link",
        "label": "Bug Report",
        "href": "mailto:support@mtcextendee.com"
      },
      {
        "type": "link",
        "label": "Feature Request",
        "href": "mailto:support@mtcextendee.com"
      }
    ]
  },
  "footer": {
    "socials": {
    }
  }
}
